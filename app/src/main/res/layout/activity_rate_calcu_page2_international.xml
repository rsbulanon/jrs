<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/calcu2_header_bg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/dp_fifteen">

        <dynobjx.com.jrs.customviews.TextViewPlus
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step2"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_twenty"
            app:customTextViewFont="Roboto-Light.ttf" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginBottom="@dimen/dp_ten"
            android:layout_marginTop="@dimen/dp_ten"
            android:background="@android:color/white" />

        <dynobjx.com.jrs.customviews.TextViewPlus
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_spc"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dp_twenty_five"
            app:customTextViewFont="Roboto-Light.ttf" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/dp_ten"
        android:layout_weight="70"
        android:orientation="vertical">

        <!-- mails -->
        <LinearLayout
            android:id="@+id/llDocuments"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:clickable="true"
            android:layout_marginBottom="@dimen/dp_five"
            android:background="@drawable/button_domestic_intl_clickable"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:layout_margin="@dimen/dp_ten"
                android:src="@drawable/step2_mails_ico"/>

            <dynobjx.com.jrs.customviews.TextViewPlus
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/documents"
                app:customTextViewFont="Roboto-Regular.ttf"
                android:textSize="@dimen/sp_thirty"
                android:textAllCaps="true"
                android:textColor="@android:color/white"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llParcel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:clickable="true"
            android:layout_marginBottom="@dimen/dp_five"
            android:background="@drawable/button_domestic_intl_clickable"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:layout_margin="@dimen/dp_ten"
                android:src="@drawable/step2_package_ico"/>

            <dynobjx.com.jrs.customviews.TextViewPlus
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/parcel"
                app:customTextViewFont="Roboto-Regular.ttf"
                android:textSize="@dimen/sp_thirty"
                android:textAllCaps="true"
                android:textColor="@android:color/white"/>


        </LinearLayout>

        <!-- box -->
        <LinearLayout
            android:id="@+id/llBox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:clickable="true"
            android:layout_marginBottom="@dimen/dp_five"
            android:orientation="horizontal">


        </LinearLayout>

        <!-- package -->
        <LinearLayout
            android:id="@+id/llPackages"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:clickable="true"
            android:orientation="horizontal">



        </LinearLayout>


    </LinearLayout>

</LinearLayout>