<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_ten"
        android:orientation="vertical">

        <!--my pickup location-->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="@dimen/dp_five"
            card_view:cardElevation="@dimen/dp_five">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:padding="@dimen/dp_five">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <dynobjx.com.jrs.customviews.TextViewPlus
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/my_pickup_loc"
                        android:textColor="@color/domestic_intl_btn_bg"
                        android:textSize="@dimen/sp_thirty"
                        card_view:customTextViewFont="Roboto-Medium.ttf" />

                    <com.rey.material.widget.Button
                        android:id="@+id/ivAddPickUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_fifty"
                        android:background="@color/pup_button"
                        android:text="@string/set_pickup_loc"
                        android:textColor="@android:color/white"
                        app:rd_enable="true"
                        app:rd_maxRippleRadius="match_view"
                        app:rd_rippleType="touch" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llPickUpLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_ten"
                    android:orientation="horizontal">

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tiAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_ten"
                    android:layout_marginTop="@dimen/dp_ten"
                    android:visibility="gone">

                    <dynobjx.com.jrs.customviews.EditTextPlus
                        android:id="@+id/etAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_st_address"
                        android:imeOptions="actionDone"
                        android:inputType="textCapWords"
                        card_view:customEditTextFont="Roboto-Thin.ttf" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!--destination pickup location-->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="@dimen/dp_five"
            card_view:cardElevation="@dimen/dp_five">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:padding="@dimen/dp_five">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <dynobjx.com.jrs.customviews.TextViewPlus
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="@string/destination_loc"
                        android:textColor="@color/domestic_intl_btn_bg"
                        android:textSize="@dimen/sp_thirty"
                        card_view:customTextViewFont="Roboto-Medium.ttf" />

                    <com.rey.material.widget.Button
                        android:id="@+id/ivAddDesti"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_fifty"
                        android:background="@color/pup_button"
                        android:text="@string/add_destination"
                        android:textColor="@android:color/white"
                        app:rd_enable="true"
                        app:rd_maxRippleRadius="match_view"
                        app:rd_rippleType="touch" />

                </RelativeLayout>

                <dynobjx.com.jrs.customviews.OverflowLayout
                    android:id="@+id/llDestination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_ten">

                </dynobjx.com.jrs.customviews.OverflowLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!-- pickup date -->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_five"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="@dimen/dp_five"
            card_view:cardElevation="@dimen/dp_five">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:padding="@dimen/dp_five">

                <dynobjx.com.jrs.customviews.TextViewPlus
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pickup_date"
                    android:textColor="@color/domestic_intl_btn_bg"
                    android:textSize="@dimen/sp_thirty"
                    card_view:customTextViewFont="Roboto-Medium.ttf" />


                <com.rey.material.widget.Button
                    android:id="@+id/tvPickUpDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_ten"
                    android:background="@color/pup_button"
                    android:layout_marginBottom="@dimen/dp_ten"
                    android:text="@string/select_date"
                    android:textColor="@android:color/white"
                    app:rd_enable="true"
                    app:rd_maxRippleRadius="match_view"
                    app:rd_rippleType="touch" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_twenty"
            android:layout_marginTop="@dimen/dp_five"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="@dimen/dp_five"
            card_view:cardElevation="@dimen/dp_five">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:padding="@dimen/dp_five">

                <dynobjx.com.jrs.customviews.TextViewPlus
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textColor="@color/domestic_intl_btn_bg"
                    android:textSize="@dimen/sp_thirty"
                    card_view:customTextViewFont="Roboto-Medium.ttf" />

                <dynobjx.com.jrs.customviews.EditTextPlus
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_ten"
                    android:layout_marginTop="@dimen/dp_ten"
                    android:hint="@string/add_desc"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:paddingBottom="@dimen/sp_five"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/sp_twenty"
                    card_view:customEditTextFont="Roboto-Light.ttf" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <com.rey.material.widget.Button
            android:id="@+id/btnSendRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_fifty"
            android:background="@color/pup_button"
            android:text="@string/send_pup_request"
            android:textColor="@android:color/white"
            app:rd_enable="true"
            app:rd_maxRippleRadius="match_view"
            app:rd_rippleType="touch" />

    </LinearLayout>
</ScrollView>