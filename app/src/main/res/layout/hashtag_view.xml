<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_margin="@dimen/dp_five"
    android:background="@drawable/hashtag_bg"
    android:orientation="horizontal">

    <dynobjx.com.jrs.customviews.TextViewPlus
        android:id="@+id/tvHashTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="@dimen/dp_five"
        android:paddingTop="@dimen/dp_five"
        android:singleLine="true"
        android:maxLines="1"
        android:maxLength="25"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        app:customTextViewFont="Roboto-Light.ttf"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <dynobjx.com.jrs.customviews.TextViewPlus
        android:id="@+id/tvClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        android:layout_toRightOf="@id/tvHashTag"
        app:customTextViewFont="fontawesome-webfont.ttf"
        android:text="@string/fa_close"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_thirty" />

</RelativeLayout>