<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_fifteen"
        android:layout_marginRight="@dimen/dp_fifteen"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_fifteen"
            android:layout_marginRight="@dimen/dp_fifteen"
            android:layout_weight="1"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/loginpage_logo" />
        </LinearLayout>

        <dynobjx.com.jrs.customviews.EditTextPlus
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_email"
            android:gravity="center"
            android:hint="@string/hint_email"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:paddingBottom="@dimen/dp_fifteen"
            android:paddingTop="@dimen/dp_fifteen"
            android:singleLine="true"
            android:textSize="@dimen/sp_twenty"
            app:customEditTextFont="Roboto-Light.ttf" />

        <dynobjx.com.jrs.customviews.EditTextPlus
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/login_password"
            android:gravity="center"
            android:hint="@string/hint_password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:paddingBottom="@dimen/dp_fifteen"
            android:paddingTop="@dimen/dp_fifteen"
            android:singleLine="true"
            android:textSize="@dimen/sp_twenty"
            app:customEditTextFont="Roboto-Light.ttf" />

        <dynobjx.com.jrs.customviews.ButtonPlus
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_forty"
            android:background="@drawable/button_login_clickable"
            android:text="@string/login"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_twenty_five"
            app:customButtonFont="Roboto-Regular.ttf" />

    </LinearLayout>

    <dynobjx.com.jrs.customviews.TextViewPlus
        android:layout_alignParentBottom="true"
        android:id="@+id/tvCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_twenty"
        android:clickable="true"
        android:text="@string/create_account"
        android:textColor="@color/btn_login"
        android:textSize="@dimen/sp_twenty_five"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>