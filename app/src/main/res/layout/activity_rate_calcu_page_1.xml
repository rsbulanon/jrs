<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/calcu1_header_bg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/dp_fifteen">

        <dynobjx.com.jrs.customviews.TextViewPlus
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_twenty"
            app:customTextViewFont="Roboto-Light.ttf" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginBottom="@dimen/dp_ten"
            android:layout_marginTop="@dimen/dp_ten"
            android:background="@android:color/white" />

        <dynobjx.com.jrs.customviews.TextViewPlus
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_sod"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dp_twenty_five"
            app:customTextViewFont="Roboto-Light.ttf" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dp_ten"
        android:layout_weight="70"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llDomestic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:clickable="true"
            android:layout_marginBottom="@dimen/dp_five"
            android:background="@drawable/button_domestic_intl_clickable"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:layout_marginLeft="@dimen/dp_ten"
                android:layout_marginRight="@dimen/dp_ten"
                android:layout_marginBottom="@dimen/dp_twenty"
                android:layout_marginTop="@dimen/dp_twenty"
                android:src="@drawable/step1_phil_map"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:gravity="center"
                android:orientation="vertical">

                <dynobjx.com.jrs.customviews.TextViewPlus
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/domestic"
                    app:customTextViewFont="Roboto-Regular.ttf"
                    android:textSize="@dimen/sp_twenty"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"/>

                <dynobjx.com.jrs.customviews.TextViewPlus
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/for_local"
                    app:customTextViewFont="Roboto-Regular.ttf"
                    android:textSize="@dimen/sp_fifteen"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llInternational"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:layout_marginTop="@dimen/dp_five"
            android:clickable="true"
            android:background="@drawable/button_domestic_intl_clickable"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:layout_margin="@dimen/dp_ten"
                android:src="@drawable/step1_world_map"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:gravity="center"
                android:orientation="vertical">


                <dynobjx.com.jrs.customviews.TextViewPlus
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/international"
                    app:customTextViewFont="Roboto-Regular.ttf"
                    android:textSize="@dimen/sp_twenty"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"/>

                <dynobjx.com.jrs.customviews.TextViewPlus
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/for_intl"
                    android:gravity="center"
                    app:customTextViewFont="Roboto-Regular.ttf"
                    android:textSize="@dimen/sp_fifteen"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>