<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <dynobjx.com.jrs.customviews.TextViewPlus
        android:layout_width="match_parent"
        android:background="@color/domestic_intl_btn_bg"
        android:layout_height="@dimen/dp_fifty"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_thirty"
        app:customTextViewFont="Roboto-Medium.ttf"
        android:paddingLeft="@dimen/dp_ten"
        android:gravity="center_vertical"
        android:text="@string/change_pass"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <!-- old pass -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_twenty"
            android:layout_height="wrap_content">

            <dynobjx.com.jrs.customviews.EditTextPlus
                android:id="@+id/etOldPassword"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:layout_height="wrap_content"
                android:hint="@string/hint_old_pw"
                app:customEditTextFont="Roboto-Thin.ttf" />

        </android.support.design.widget.TextInputLayout>

        <!-- old new pass -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_five"
            android:layout_height="wrap_content">

            <dynobjx.com.jrs.customviews.EditTextPlus
                android:id="@+id/etNewPass"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:hint="@string/hint_new_pw"
                app:customEditTextFont="Roboto-Thin.ttf" />

        </android.support.design.widget.TextInputLayout>

        <!--confirm pass-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_five"
            android:layout_marginBottom="@dimen/dp_ten"
            android:layout_height="wrap_content">

            <dynobjx.com.jrs.customviews.EditTextPlus
                android:id="@+id/etConfirmPass"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:layout_height="wrap_content"
                android:hint="@string/hint_confirm_pw"
                app:customEditTextFont="Roboto-Thin.ttf" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


    <dynobjx.com.jrs.customviews.TextViewPlus
        android:id="@+id/tvChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_ten"
        android:textColor="@color/action_bar_bg"
        android:text="Change"
        android:textSize="@dimen/sp_twenty_five"
        app:customTextViewFont="Roboto-Light.ttf"
        style="?android:attr/borderlessButtonStyle"/>

</LinearLayout>