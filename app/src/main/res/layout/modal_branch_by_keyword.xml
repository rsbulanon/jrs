<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <dynobjx.com.jrs.customviews.TextViewPlus
        android:layout_width="match_parent"
        android:background="@color/action_bar_bg"
        android:layout_height="@dimen/dp_fifty"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_thirty"
        app:customTextViewFont="Roboto-Thin.ttf"
        android:paddingLeft="@dimen/dp_ten"
        android:gravity="center_vertical"
        android:text="@string/branch_keyword_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_thirty"
            android:layout_height="wrap_content">

            <dynobjx.com.jrs.customviews.EditTextPlus
                android:id="@+id/etKeyword"
                android:layout_width="match_parent"
                android:inputType="textCapWords"
                android:layout_height="wrap_content"
                android:hint="@string/branch_keyword_hint"
                app:customEditTextFont="Roboto-Thin.ttf" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <dynobjx.com.jrs.customviews.TextViewPlus
        android:id="@+id/tvSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_ten"
        android:textColor="@color/action_bar_bg"
        android:text="Search"
        android:textSize="@dimen/sp_twenty_five"
        app:customTextViewFont="Roboto-Light.ttf"
        style="?android:attr/borderlessButtonStyle"/>

</LinearLayout>