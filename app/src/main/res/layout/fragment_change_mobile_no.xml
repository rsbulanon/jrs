<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <dynobjx.com.jrs.customviews.TextViewPlus
        android:layout_width="match_parent"
        android:background="@color/domestic_intl_btn_bg"
        android:layout_height="@dimen/dp_fifty"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_thirty"
        app:customTextViewFont="Roboto-Medium.ttf"
        android:paddingLeft="@dimen/dp_ten"
        android:gravity="center_vertical"
        android:text="@string/change_mobile"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:layout_marginLeft="@dimen/dp_ten"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <dynobjx.com.jrs.customviews.TextViewPlus
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_twenty"
            android:text="@string/curr_number"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/sp_fifteen"
            app:customTextViewFont="Roboto-Light.ttf" />

        <dynobjx.com.jrs.customviews.TextViewPlus
            android:id="@+id/tvCurrNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_ten"
            android:text="@string/curr_number"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_twenty"
            app:customTextViewFont="Roboto-Medium.ttf" />

        <!-- new mobile no -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_twenty"
            android:layout_height="wrap_content">

            <dynobjx.com.jrs.customviews.EditTextPlus
                android:id="@+id/etMobileNo"
                android:layout_width="match_parent"
                android:inputType="number|phone"
                android:imeOptions="actionDone"
                android:layout_height="wrap_content"
                android:hint="@string/new_mobile_no_hint"
                app:customEditTextFont="Roboto-Thin.ttf" />

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <dynobjx.com.jrs.customviews.TextViewPlus
        android:id="@+id/tvChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_ten"
        android:textColor="@color/action_bar_bg"
        android:text="Change"
        android:textSize="@dimen/sp_twenty_five"
        app:customTextViewFont="Roboto-Light.ttf"
        style="?android:attr/borderlessButtonStyle"/>

</LinearLayout>